/* Openstrat 文档自定义样式 */

/* 根变量定义 - 与 App 色彩保持一致 */
:root {
  /* 亮色模式 */
  --bg-main: #FFFFFF;
  --bg-card: #F0F4FF;
  --bg-card-secondary: #FFF9F0;
  
  --text-primary: #1A1A1A;
  --text-body: #333333;
  --text-secondary: #8B8B8B;
  
  --accent-blue: #4A90E2;
  --accent-orange: #FF9500;
  --accent-green: #00C853;
  --accent-red: #FF3B30;
  
  --border-light: #E8E8E8;
  --accent-cyan: #00D4FF;
}

/* 暗色模式变量 */
[data-theme="dark"], .dark {
  /* 暗色背景 */
  --bg-main: #0F1419;
  --bg-card: #1A1F2E;
  --bg-card-secondary: #2A1F1A;
  
  /* 暗色文字 */
  --text-primary: #F0F0F0;
  --text-body: #D0D0D0;
  --text-secondary: #A0A0A0;
  
  /* 增强对比度的强调色 */
  --accent-blue: #5BA3F5;
  --accent-orange: #FFA726;
  --accent-green: #26E07F;
  --accent-red: #FF5252;
  
  /* 暗色边框 */
  --border-light: #333333;
  --accent-cyan: #26C6DA;
}

/* 系统暗色模式自动适配 */
@media (prefers-color-scheme: dark) {
  :root:not([data-theme="light"]) {
    --bg-main: #0F1419;
    --bg-card: #1A1F2E;
    --bg-card-secondary: #2A1F1A;
    
    --text-primary: #F0F0F0;
    --text-body: #D0D0D0;
    --text-secondary: #A0A0A0;
    
    --accent-blue: #5BA3F5;
    --accent-orange: #FFA726;
    --accent-green: #26E07F;
    --accent-red: #FF5252;
    
    --border-light: #333333;
    --accent-cyan: #26C6DA;
  }
}

/* 全局背景 */
body {
  background-color: var(--bg-main) !important;
  color: var(--text-body) !important;
}

/* 主标题样式 */
h1, .title {
  color: var(--text-primary) !important;
  font-weight: 600 !important;
}

h2, h3, h4, h5, h6 {
  color: var(--text-primary) !important;
}

/* 正文内容 */
p, .content {
  color: var(--text-body) !important;
  line-height: 1.6 !important;
}

/* 次要信息样式 */
.text-secondary, .timestamp, .meta {
  color: var(--text-secondary) !important;
  font-size: 0.875rem !important;
}

/* 卡片样式 - 交替背景 */
.card:nth-child(even) {
  background-color: var(--bg-card) !important;
  border: 1px solid var(--border-light) !important;
  border-radius: 8px !important;
  position: relative;
}

.card:nth-child(odd) {
  background-color: var(--bg-card-secondary) !important;
  border: 1px solid var(--border-light) !important;
  border-radius: 8px !important;
  position: relative;
}

/* 右侧装饰条 */
.card::after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 4px;
  background-color: var(--accent-cyan);
  border-top-right-radius: 8px;
  border-bottom-right-radius: 8px;
}

/* 表格样式 */
table {
  border-collapse: collapse !important;
  border: 1px solid var(--border-light) !important;
  background-color: var(--bg-main) !important;
}

th {
  background-color: var(--bg-card) !important;
  color: var(--text-primary) !important;
  font-weight: 600 !important;
  border: 1px solid var(--border-light) !important;
  padding: 12px !important;
}

td {
  color: var(--text-body) !important;
  border: 1px solid var(--border-light) !important;
  padding: 10px 12px !important;
}

/* 强调色应用 */
.highlight-blue, .pre-market {
  color: var(--accent-blue) !important;
  font-weight: 500 !important;
}

.highlight-orange, .post-market {
  color: var(--accent-orange) !important;
  font-weight: 500 !important;
}

.positive, .gain {
  color: var(--accent-green) !important;
  font-weight: 500 !important;
}

.negative, .loss {
  color: var(--accent-red) !important;
  font-weight: 500 !important;
}

/* 代码块样式 */
pre {
  background-color: var(--bg-card) !important;
  border: 1px solid var(--border-light) !important;
  border-radius: 6px !important;
  color: var(--text-body) !important;
}

code {
  background-color: var(--bg-card) !important;
  color: var(--text-primary) !important;
  padding: 2px 4px !important;
  border-radius: 3px !important;
  font-size: 0.875em !important;
}

/* 引用块样式 */
blockquote {
  border-left: 4px solid var(--accent-blue) !important;
  background-color: var(--bg-card) !important;
  padding: 16px 20px !important;
  margin: 16px 0 !important;
  border-radius: 4px !important;
  color: var(--text-body) !important;
}

/* 链接样式 */
a {
  color: var(--text-primary) !important;
  text-decoration: none !important;
  border-bottom: 1px solid var(--border-light);
  transition: all 0.2s ease;
}

a:hover {
  color: var(--accent-blue) !important;
  border-bottom-color: var(--accent-blue);
  text-decoration: none !important;
}

/* 按钮样式 */
.btn-primary {
  background-color: var(--accent-blue) !important;
  border-color: var(--accent-blue) !important;
  color: white !important;
}

.btn-primary:hover {
  background-color: var(--accent-cyan) !important;
  border-color: var(--accent-cyan) !important;
}

.btn-secondary {
  background-color: var(--accent-orange) !important;
  border-color: var(--accent-orange) !important;
  color: white !important;
}

/* 侧边栏样式 */
.sidebar {
  background-color: var(--bg-main) !important;
  border-right: 1px solid var(--border-light) !important;
}

/* 导航项样式 */
.nav-item {
  color: var(--text-body) !important;
}

.nav-item.active {
  color: var(--accent-blue) !important;
  background-color: var(--bg-card) !important;
  border-radius: 6px !important;
}

/* 搜索框样式 */
.search-input {
  background-color: var(--bg-card) !important;
  border: 1px solid var(--border-light) !important;
  color: var(--text-body) !important;
}

.search-input:focus {
  border-color: var(--accent-blue) !important;
  box-shadow: 0 0 0 2px rgba(74, 144, 226, 0.1) !important;
}

/* 面包屑导航 */
.breadcrumb {
  color: var(--text-secondary) !important;
}

.breadcrumb a {
  color: var(--text-secondary) !important;
  border-bottom: none !important;
}

.breadcrumb a:hover {
  color: var(--text-primary) !important;
}

/* 分隔线 */
hr {
  border-color: var(--border-light) !important;
  margin: 24px 0 !important;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 0.75rem;
  font-weight: 500;
}

.tag-blue {
  background-color: rgba(74, 144, 226, 0.1);
  color: var(--accent-blue);
}

.tag-orange {
  background-color: rgba(255, 149, 0, 0.1);
  color: var(--accent-orange);
}

.tag-green {
  background-color: rgba(0, 200, 83, 0.1);
  color: var(--accent-green);
}

.tag-red {
  background-color: rgba(255, 59, 48, 0.1);
  color: var(--accent-red);
}

/* 暗色模式特殊优化 */
[data-theme="dark"] .card,
.dark .card,
@media (prefers-color-scheme: dark) {
  :root:not([data-theme="light"]) .card {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3) !important;
  }
}

[data-theme="dark"] blockquote,
.dark blockquote {
  background-color: rgba(26, 31, 46, 0.8) !important;
  border-left-color: var(--accent-blue) !important;
}

[data-theme="dark"] pre,
.dark pre {
  background-color: #1A1F2E !important;
  border-color: #333333 !important;
}

[data-theme="dark"] code,
.dark code {
  background-color: rgba(26, 31, 46, 0.6) !important;
  color: var(--text-primary) !important;
}

/* 暗色模式下的链接优化 */
[data-theme="dark"] a:hover,
.dark a:hover {
  color: var(--accent-blue) !important;
  border-bottom-color: var(--accent-blue) !important;
}

/* 暗色模式搜索框优化 */
[data-theme="dark"] .search-input:focus,
.dark .search-input:focus {
  box-shadow: 0 0 0 2px rgba(91, 163, 245, 0.3) !important;
  border-color: var(--accent-blue) !important;
}

/* 响应式调整 */
@media (max-width: 768px) {
  .card {
    margin: 8px 0 !important;
    padding: 12px !important;
  }
  
  table {
    font-size: 0.875rem !important;
  }
  
  th, td {
    padding: 8px !important;
  }
}